# Ollama Configuration
# Required in production, defaults to localhost:11434 in development
REACT_APP_OLLAMA_URL=http://localhost:11434

# Ollama model name (defaults to mistral-nz-cars)
REACT_APP_OLLAMA_MODEL=mistral-nz-cars

# Request timeout in milliseconds (defaults: 30000 dev, 45000 prod)
REACT_APP_OLLAMA_TIMEOUT=30000

# Number of retry attempts for failed requests (default: 3)
REACT_APP_OLLAMA_RETRY_ATTEMPTS=3

# CORS mode: cors, no-cors, same-origin (defaults: no-cors dev, cors prod)
REACT_APP_CORS_MODE=no-cors

# Ollama Model Parameters
REACT_APP_OLLAMA_TEMPERATURE=0.7
REACT_APP_OLLAMA_MAX_TOKENS=2048
REACT_APP_OLLAMA_TOP_P=0.9

# Chat Configuration
REACT_APP_CHAT_MAX_HISTORY=10
REACT_APP_SYSTEM_PROMPT="You are a helpful car buying assistant..."

# UI Configuration
REACT_APP_SHOW_CONNECTION_STATUS=true
REACT_APP_ENABLE_MODEL_SELECTION=false
REACT_APP_TYPING_DELAY=500
REACT_APP_MAX_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=2000

# Network Configuration
REACT_APP_HEALTH_CHECK_INTERVAL=30000

# CORS Proxy Configuration
# URL of custom CORS proxy service (optional)
REACT_APP_CORS_PROXY=

# Force use of proxy even when direct connection might work
REACT_APP_USE_PROXY=false

# Timeout for proxy requests in milliseconds
REACT_APP_PROXY_TIMEOUT=30000

# Advanced CORS Configuration
# Comma-separated list of allowed origins for Ollama server
# Set this on your PC where Ollama runs: export OLLAMA_ORIGINS="https://your-app.vercel.app"
REACT_APP_CORS_ORIGINS=https://your-app.vercel.app

# Whether to include credentials in CORS requests (usually false for Ollama)
REACT_APP_CORS_CREDENTIALS=false

# CORS preflight cache duration in seconds
REACT_APP_CORS_MAX_AGE=86400

# Production Examples (Vercel deployment connecting to remote PC)

# Option 1: Direct IP with port forwarding
# REACT_APP_OLLAMA_URL=https://your-public-ip:11434
# REACT_APP_CORS_MODE=cors
# REACT_APP_OLLAMA_TIMEOUT=45000
# On your PC: export OLLAMA_ORIGINS="https://your-app.vercel.app"

# Option 2: ngrok tunnel
# REACT_APP_OLLAMA_URL=https://abc123.ngrok.io
# REACT_APP_CORS_MODE=cors
# REACT_APP_OLLAMA_TIMEOUT=45000

# Option 3: Cloudflare Tunnel
# REACT_APP_OLLAMA_URL=https://ollama.yourdomain.com
# REACT_APP_CORS_MODE=cors
# REACT_APP_OLLAMA_TIMEOUT=45000

# Option 4: With CORS proxy fallback
# REACT_APP_OLLAMA_URL=https://your-ollama-server.com
# REACT_APP_CORS_MODE=cors
# REACT_APP_CORS_PROXY=https://your-cors-proxy.herokuapp.com
# REACT_APP_USE_PROXY=false  # Use proxy as fallback only